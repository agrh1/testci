# Dockerfile.web
# Образ для web-сервиса (Flask + gunicorn).
# Важно: встраиваем GIT_SHA в ENV, чтобы /status мог показать версию.

FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1

WORKDIR /app

# Ставим только зависимости web
COPY requirements-web.txt /app/requirements-web.txt
RUN pip install --no-cache-dir -r /app/requirements-web.txt

# Копируем исходники
COPY . /app

# Встраиваем commit SHA на этапе сборки
ARG GIT_SHA=unknown
ENV GIT_SHA=${GIT_SHA}

EXPOSE 8000

CMD ["gunicorn", "-b", "0.0.0.0:8000", "app:app"]

